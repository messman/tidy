	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "WBT Server",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}/projects/server",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run-script",
				"start"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/projects/server/dist/**/*.js",
			],
			"killBehavior": "forceful"
		},
	]
}