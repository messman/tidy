{
	"compilerOptions": {
		"incremental": true,
		"allowJs": false,
		"alwaysStrict": true,
		"checkJs": false,
		"module": "commonjs",
		"noImplicitAny": false,
		"noImplicitReturns": false,
		"noImplicitThis": false,
		"esModuleInterop": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"noEmitOnError": true,
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	],
	"compileOnSave": false
}