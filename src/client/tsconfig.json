{
	"extends": "../tsconfig-base.json",
	"compilerOptions": {
		"rootDir": ".",
		"outFile": "./dist/shared.js",
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"outDir": "./build",
		"paths": {
			"@/*": [
				"*"
			],
			"@shared/*": [
				"../shared/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*"
	],
	"references": [
		{
			"path": "../shared"
		}
	],
	"compileOnSave": false
}