{
	"extends": "../../shared/configs/tsconfig-base.json",
	"compilerOptions": {
		"declaration": false,
		"declarationMap": false,
		"lib": [
			"DOM",
			"ESNext"
		],
		"jsx": "react",
		"outDir": "./ts-build",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*",
		"types/**/*"
	]
}